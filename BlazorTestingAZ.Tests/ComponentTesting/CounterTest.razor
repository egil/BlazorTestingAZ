@attribute [TestFixture]
@inherits BunitTestContext
@code {

    [Test]
    public void Count_Increments_WhenButtonIsClicked()
    {
        // Arrange
        var cut = Render(@<Counter />);

        // Act
        // Role based lookup coming to bUnit soon. Actively 
        // worked on by Scott Sauber
        cut.Find("button").Click();

        // Assert
        var statusText = cut.Find("[role=status]").TextContent;
        Assert.That(statusText, Is.EqualTo("Current count: 1"));
    }
}
