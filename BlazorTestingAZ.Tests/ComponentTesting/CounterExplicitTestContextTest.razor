@code {
    [Fact]
    public void Count_Increments_WhenButtonIsClicked()
    {
        // Arrange
        using var ctx = new TestContext();
        IRenderedFragment cut = ctx.Render(@<Counter />);

        // Act
        cut.Find("button").Click();

        // Assert
        string statusText = cut.Find("[role=status]").TextContent;
        statusText.MarkupMatches("Current count: 1");
    }
}